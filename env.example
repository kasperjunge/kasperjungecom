# =============================================================================
# LOCAL DEVELOPMENT ENVIRONMENT
# =============================================================================
# For running locally with separate frontend (localhost:5173) and backend (localhost:8000)

ENVIRONMENT=local

# Database
DATABASE_TYPE=sqlite
SQLITE_DB_PATH=./data/app.db

# Server Configuration
BACKEND_HOST=localhost
BACKEND_PORT=8000
FRONTEND_HOST=localhost
FRONTEND_PORT=5173

# No domain configuration needed for local development
DOMAIN=
BACKEND_PATH=
FRONTEND_PATH=
USE_SSL=false

# Security
SECRET_KEY=dev-secret-key-change-for-production

# Admin User
ADMIN_EMAIL=admin@example.com
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123
ADMIN_FIRST_NAME=Admin
ADMIN_LAST_NAME=User

# Email (MailHog for local development)
EMAIL_PROVIDER=mailhog
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_FROM=test@example.com
MAIL_PORT=1025
MAIL_SERVER=localhost
MAIL_FROM_NAME=FastAPI App
MAIL_STARTTLS=false
MAIL_SSL_TLS=false
USE_CREDENTIALS=false
VALIDATE_CERTS=false

VERIFICATION_TOKEN_EXPIRE_HOURS=24 